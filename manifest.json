{
  "manifest_version": 3,
  "name": "Bionic Reading Citius Vide",
  "version": "1.2.2",
  "description": "Bionic Reading, read Faster with TextVide",
  "icons": {
    "64": "icon.png"
  },
  "permissions": ["activeTab", "storage"],
  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.iife.js","inject.js"]
    }
  ],
  "host_permissions": ["*://*/*"]
}
